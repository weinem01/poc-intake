    },
    {
      "name": "Change Task status",
      "method": "PUT",
      "path": "/tasks/{task_id}/status",
      "description": "The API to change status of a task",
      "headers": {},
      "request": {
        "body": {
          "status": {
            "type": "string",
            "required": true,
            "description": "Allowed values: Pending, Completed"
          }
        }
      },
      "response": {
