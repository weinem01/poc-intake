                "consultation_cpt_map_id": "string",
                "modifier_1": "string",
                "modifier_2": "string",
                "modifier_3": "string",
                "modifier_4": "string",
                "place_of_service": "string",
                "related_diagnosis_ids": [
                  "integer"
                ],
                "tax_id": "string",
                "tax_name": "string",
                "tax_percentage": "string",
