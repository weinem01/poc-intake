                  "is_multi_choice": "boolean",
                  "notes": "string",
                  "is_deleted": "boolean",
                  "font_size": "integer",
                  "is_mandatory": "boolean",
                  "position": "integer",
                  "font_style": "string",
                  "entry_id": "string",
                  "notes_type": "string",
                  "text_align": "string",
                  "allergy_entries": [],
                  "medication_entries": [],
                  "soap_widget": {
                    "soap_template_id": "string",
                    "entries": [
                      {
                        "soap_entry_answer": "string",
